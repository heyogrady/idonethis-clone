          </div><!-- /#team-form-frequencies -->
        </form><!-- /#team-form -->
      </div><!-- /#team-form-container -->
    </div><!-- /.tab-content -->
    
  </div><!-- /.col-sm-6 col-sm-offset-3 -->
</div><!-- /.row -->