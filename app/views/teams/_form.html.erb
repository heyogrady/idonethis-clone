<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :name, label: "Name", input_html: { class: "form-control" },
                      hint: "Your calendar's name" %>
      <div class="form-group">
        <div class="checkbox">
          <%= f.input :is_personal, as: :boolean, wrapper: :default, label: "Is this a personal calendar?" %>
        </div><!-- /.checkbox -->
      </div><!-- /.form-group -->
      <%= f.input :email_reminder_time, as: :select, label: "Email reminder time",
                  collection: Team::TIMES, wrapper_class: "inline" %>
      <%= f.input :days_to_send_reminder, as: :check_boxes,
                  collection: Team::DAYS %>
      <%= f.input :email_digest_time, as: :select, label: "Email reminder time",
                  collection: Team::TIMES, wrapper_class: "inline" %>
      <%= f.input :days_to_send_digest, as: :check_boxes,
                  collection: Team::DAYS %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
